% Command for Coverpage
\newcommand*{\coverpage}{%
\pagenumbering{gobble}%
\begin{center}%
    \textbf{\MakeUppercase{\@program}}%
    \vfill%
    \textbf{\@title}%
    \vfill%
    \foreach \authorinfo in \authorlist {%
        \textbf{\getauthorname{\authorinfo}}\\%
        \textbf{\getauthorid{\authorinfo}}\\%
    }%

    \vfill%

    %\textbf{Department of Computer Science and Engineering}\\
    \textbf{\@department}\\%
    Islamic University of Technology\\%
    \getdatemy%
\end{center}
\clearpage
}

